<Window x:Class="WpfAppTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTest"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen" Top="0" Left="0"
        Title="Учет офисного оборудования" Height="800" Width="1400" MinHeight="800" MinWidth="1400" MaxHeight="800" MaxWidth="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Учет офисного оборудования" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal"></StackPanel>
        
        <DataGrid x:Name="EquipmentList" Grid.Row="2" ItemsSource="{Binding EquipmentList}"
                      AutoGenerateColumns="False" Width="auto" Height="auto" VerticalScrollBarVisibility="Hidden">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
